import { VerticalBox, StandardListView, Button, LineEdit, HorizontalBox, StandardTableView } from "std-widgets.slint";
export global ChangeEquipament {
    in property <string> search;
    in property <string> user;
    in property <string> future_user;
    in property <string> furure_login;
    in property <[[StandardListViewItem]]> users: [
    [{text:"aa"},{text:"ab"},{text:"ac"},{text:"ad"}],
    [{text:"ba"},{text:"bb"},{text:"bc"},{text:"bd"}]
    ];
    callback filter_users(); 
    callback change_user();
    
}
export component ChangeUserEquipament inherits VerticalBox {


    HorizontalBox {
    Button {text: "save";
    clicked => {
            ChangeEquipament.change_user();
        }
    }   

    }
    
    LineEdit {
        accepted => {
            ChangeEquipament.filter_users()
        }
    }
    StandardTableView{
        rows: ChangeEquipament.users;
        current-row-changed(index) => {

            ChangeEquipament.future_user = ChangeEquipament.users[index][3].text;            
        }
    }
}
